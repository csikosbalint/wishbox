<features name="hu.fnf.devel.wishbox" xmlns="http://karaf.apache.org/xmlns/features/v1.0.0">
    <feature name="jackson">
        <bundle>mvn:com.fasterxml.jackson.core/jackson-core/2.4.0</bundle>
        <bundle>mvn:com.fasterxml.jackson.core/jackson-annotations/2.4.0</bundle>
        <bundle>mvn:com.fasterxml.jackson.core/jackson-databind/2.4.0</bundle>
        <bundle>mvn:com.fasterxml.jackson.jaxrs/jackson-jaxrs-base/2.4.0</bundle>
        <bundle>mvn:com.fasterxml.jackson.jaxrs/jackson-jaxrs-json-provider/2.4.0</bundle>
    </feature>
    <feature name="wishbox" version="${main.version}" description="${description}">
        <details>${description}</details>
        <feature>jackson</feature>
        <feature>cxf</feature>
        <feature>http</feature>
        <bundle>mvn:hu.fnf.devel.wishbox/gateway/${main.version}</bundle>
        <bundle>mvn:hu.fnf.devel.wishbox/gateway-engine/${main.version}</bundle>
        <bundle>mvn:hu.fnf.devel.wishbox/crawler/${main.version}</bundle>
        <bundle>mvn:hu.fnf.devel.wishbox/crawler-engine/${main.version}</bundle>
    </feature>
</features>
