<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0
           http://www.w3.org/2001/XMLSchema-instance http://www.w3.org/2001/XMLSchema-instance">

    <bean id="derbyDataSource" class="org.apache.derby.jdbc.EmbeddedDataSource">
        <property name="databaseName" value="memory:fancyfoodsDB"/>
        <property name="createDatabase" value="create"/>
    </bean>

    <bean id="derbyXADataSource" class="org.apache.derby.jdbc.EmbeddedXADataSource">
        <property name="databaseName" value="memory:fancyfoodsDB"/>
        <property name="createDatabase" value="create"/>
    </bean>

    <bean id="dataSource" class="com.mysql.jdbc.jdbc2.optional.MysqlDataSource">
        <property name="URL" value="jdbc:mysql://sql01x/wishbox"/>
        <property name="user" value="wishbox"/>
        <!--<bean id="dataSource" class="org.apache.derby.jdbc.EmbeddedDataSource">-->
        <property name="password" value="Tigris99"/>
        <!--<property name="databaseName" value="memory:wishboxDB"/>-->
        <!--<property name="createDatabase" value="create"/>-->
    </bean>

    <bean id="xaDataSource" class="com.mysql.jdbc.jdbc2.optional.MysqlXADataSource">
        <property name="URL" value="jdbc:mysql://sql01x/wishbox"/>
        <property name="user" value="wishbox"/>
        <property name="password" value="Tigris99"/>
        <!--<bean id="xaDataSource" class="org.apache.derby.jdbc.EmbeddedXADataSource">-->
        <!--<property name="databaseName" value="memory:wishboxDB"/>-->
        <!--<property name="createDatabase" value="create"/>-->
    </bean>

    <service ref="dataSource" interface="javax.sql.DataSource">
        <service-properties>
            <entry key="osgi.jndi.service.name" value="wishboxdb"/>
        </service-properties>
    </service>

    <service ref="xaDataSource" interface="javax.sql.XADataSource">
        <service-properties>
            <entry key="osgi.jndi.service.name" value="xawishboxdb"/>
        </service-properties>
    </service>

</blueprint>